<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!--
    The Annotation way. No need to write XML for each bean, settings will be
    generated by the annotations.
    http://www.mularien.com/blog/2007/11/09/5-minute-guide-to-spring-and-jmx/
    http://static.springsource.org/spring/docs/2.0.x/reference/jmx.html
    
    The downside to this is that classes are now tied to Spring Framework.
  -->

  <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
    lazy-init="false">
    <property name="autodetect" value="true" />
    <property name="namingStrategy" ref="namingStrategy" />
    <property name="assembler" ref="assembler" />
  </bean>
  
  <bean id="attributeSource"
    class="org.springframework.jmx.export.annotation.AnnotationJmxAttributeSource" />
    
  <bean id="assembler"
    class="org.springframework.jmx.export.assembler.MetadataMBeanInfoAssembler">
    <property name="attributeSource" ref="attributeSource" />
  </bean>

  <bean id="namingStrategy"
    class="org.springframework.jmx.export.naming.MetadataNamingStrategy">
    <property name="attributeSource" ref="attributeSource" />
  </bean>
</beans>
